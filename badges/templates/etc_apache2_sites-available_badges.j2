<VirtualHost *:80>
    ServerAdmin webmaster@localhost
    ServerName {{ badges_domain }}

    ErrorLog /var/log/apache2/badges-error.log
    
    # Possible values include: debug, info, notice, warn, error, crit,
    # alert, emerg.
    LogLevel warn
    CustomLog /var/log/apache2/badges-access.log combined

    # run mod_wsgi process for django in daemon mode
    # this allows avoiding confused timezone settings when
    # another application runs in the same virtual host
    WSGIDaemonProcess BadgesSSL
    WSGIProcessGroup BadgesSSL

    <Location /robots.txt>
        Order deny,allow
        Allow from all
        SetHandler None
    </Location>
    Alias /robots.txt /opt/badges/badges/staticfiles/robots.txt

    # force all content to be served as static files
    # otherwise django will be crunching images through itself wasting time
    Alias /media/ "/opt/badges/badges/media/"
    <Directory "/opt/badges/badges/media">
        Order deny,allow
        Allow from all
        Options MultiViews FollowSymLinks
        AllowOverride None
    </Directory>

    Alias /static/ "/opt/badges/badges/staticfiles/"
    <Directory "/opt/badges/badges/staticfiles">
        Order deny,allow
        Allow from all
        Options MultiViews FollowSymLinks
        AllowOverride None
    </Directory>

    Alias /admin-media/ "/{{badges_venv}}/lib/python2.7/site-packages/django/contrib/admin/media/"
    <Directory "/{{badges_venv}}/lib/python2.7/site-packages/django/contrib/admin/media">
        Order deny,allow
        Allow from all
        Options MultiViews FollowSymLinks
        AllowOverride None
    </Directory>

    #this is your wsgi script described in the prev section
    WSGIScriptAlias / /opt/badges/badges/badges/production.py
</VirtualHost>

